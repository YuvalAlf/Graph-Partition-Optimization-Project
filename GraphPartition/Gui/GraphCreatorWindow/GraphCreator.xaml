<Window x:Class="GraphPartition.Gui.GraphCreatorWindow.GraphCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GraphCreator" Height="850" Width="1000">
    <DockPanel Margin="5">
        <Button Margin="0,5,0,0" Padding="5" Content="Save Graph" FontSize="26" DockPanel.Dock="Bottom"/>
        <Button Margin="0,5,0,0" Padding="5" Content="Embedd Graph" FontSize="26" DockPanel.Dock="Bottom"/>
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}" Name="ProportionsScrollViewer" Background="Azure" Width="120" DockPanel.Dock="Left"/>
        <ScrollViewer Style="{StaticResource ScrollViewerStyle}" Name="EdgesScrollViewer" Background="Snow" Width="150" DockPanel.Dock="Left"/>
        <Viewbox Style="{StaticResource BoundingMarginStyle}">
            <Canvas Name="GraphCanvas" Width="1.0" Height="1.0" Background="AliceBlue" MouseLeftButtonDown="GraphCanvas_MouseLeftButtonDown" MouseLeftButtonUp="GraphCanvas_MouseLeftButtonUp" MouseRightButtonDown="GraphCanvas_MouseRightButtonDown" MouseMove="GraphCanvas_MouseMove"/>
        </Viewbox>
    </DockPanel>
</Window>
